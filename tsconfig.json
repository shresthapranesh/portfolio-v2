{
  "compilerOptions": {
    "target": "es6",
    "module": "commonJS",
    "lib": [
      "dom",
      "dom.Iterable",
      "esnext"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "declaration": true,
    "declarationMap": true,
    "jsx": "preserve",
    "strict": true,
    "sourceMap": true,
    "rootDir": ".",
    /* Additional Checks */
    //   "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "stripInternal": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true
  },
  "include": [
    "."
  ],
  "exclude": [
    "./node_modules"
  ]
}
